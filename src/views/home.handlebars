<div>
    <h1>
        Solucion desafio Complementario: MongoDB
    </h1>
    <h3>Listado de Productos</h3>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Orden</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Code</th>
                <th>Status</th>
                <th>Stock</th>
                <th>Category</th>
                <th>Brand</th>
                <th>Thumbnail</th>  
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{{this.description}}}</td>
                <td>{{{this.price}}}</td>
                <td>{{this.code}}</td>
                <td>{{this.status}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td>{{this.brand}}</td> 
                <td>
                    {{#if this.thumbnail.length}}
                        <a href="{{thumbnail}}" target="_blank">{{this.thumbnail.[0]}}</a>
                    {{else}}
                    Without image
                    {{/if}}
                </td>                
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>