<div>
    <h1>
        Real time Products
    </h1>
    <h2>List of Products</h2>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Orden</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Code</th>
                <th>Status</th>
                <th>Stock</th>
                <th>Category</th>
                <th>Brand</th>
                <th>Thumbnail</th>  
            </tr>
        </thead>
        <tbody id="productsBody">
        </tbody>
    </table>
    <h2>
        Add products
    </h2>
    <form id="productForm">  
        <label for="id">Orden</label>    
        <input type="text" name="id" id="id" required/><br/>  

        <label for="title">Title</label>    
        <input type="text" name="title" id="title" required/><br/>  

        <label for="description">Description</label>    
        <input type="text" name="description" id="description" required/><br/>  
        
        <label for="price">Price $</label>  
        <input type="number" name="price" id="price" required/><br/>  

        <label for="code">Code</label>  
        <input type="text" name="code" id="code" required/><br/>
        
        <label for="status">Status</label>
        <input type="checkbox" name="status" id="status" value=true checked /><br/>
        
        <label for="stock">Stock:</label>
        <input type="number" name="stock" id="stock" required/><br/>   

        <label for="category">Category</label>    
        <select name="category" id="category">
            <option selected="selected" value="crema">Crema</option>
            <option value="locion">Loción</option>
            <option value="spray">Spray</option>
            <option value="serum">Sérum</option>
            <option value="mascarilla">Mascarilla</option>
        </select><br/>

        <label for="brand">Brand</label>    
        <select name="brand" id="brand">
            <option selected="selected" value="Eucerin">Eucerin</option>
            <option value="ISDIN">ISDIN</option>
            <option value="La Roche">La Roche</option>
        </select><br/>  
        
        <button type="submit">Add product</button><br/>      
    </form>



</div>
<script  src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>